<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RA3.BattleNet.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="RA3.BattleNet.Desktop.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="RA3 BattleNet Desktop"
        ExtendClientAreaToDecorationsHint="True"
        d:DesignWidth="1152" d:DesignHeight="648"
        Width="1152" Height="648"
        TransparencyLevelHint="Mica"
        Background="#AF000000">
    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <!-- MainWindow Contents BEGIN -->
    <Grid Margin="0,30,0,0">
        <Grid x:Name="TabTopMenu" Height="40" VerticalAlignment="Top">
            
        </Grid>
        <Grid x:Name="TabLeftMenu" 
            Margin="0,40,0,0"
              Width="200"
              HorizontalAlignment="Left"
              >
            
        </Grid>
        <Grid x:Name="TabContent" Margin="200,40,0,0">
            <Border
                BorderThickness="1,0,0,0"
                BorderBrush="#FF000000"
                CornerRadius="4,0,0,0"
                Background="#FF1F2126"
                >
            </Border>
        </Grid>
    </Grid>
    <!-- MainWindow Contents END -->
</Window>